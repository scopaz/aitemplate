{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "AI": {
    "Endpoint": "https://models.inference.ai.azure.com",
    "ChatModel": "gpt-4o",
    "EmbeddingModel": "text-embedding-3-small"
  },
  "Storage": {
    "VectorStore": {
      "Path": "vector-store"
    },
    "SQLite": {
      "ConnectionString": "Data Source=ingestioncache.db"
    }
  },
  "Ingestion": {
    "PDF": {
      "Directory": "wwwroot/Data"
    },
    "Logs": {
      "Directory": "wwwroot/Logs"
    }
  },
  "GitHub": {
    "Token": "[REPLACE_WITH_YOUR_TOKEN_AT_RUNTIME]"
  },
  "Loki": {
    "Endpoint": "http://your-grafana-loki-server:3100",
    "Username": "[REPLACE_WITH_YOUR_USERNAME_AT_RUNTIME]",
    "Password": "[REPLACE_WITH_YOUR_PASSWORD_AT_RUNTIME]"
  }
}
