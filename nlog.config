<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true">

  <!-- Load the Loki target assembly -->
  <extensions>
    <add assembly="NLog.Web.AspNetCore"/>
    <add assembly="NLog.Targets.Loki" />
  </extensions>
  
  <!-- Define logging targets -->
  <targets>
    <!-- File Target for all logs -->
    <target xsi:type="File" name="allfile" fileName="${basedir}/logs/nlog-all-${shortdate}.log"
            layout="${longdate}|${event-properties:item=EventId:whenEmpty=0}|${level:uppercase=true}|${logger}|${message} ${exception:format=tostring}" />
    
    <!-- Loki Target - Replace with your actual Loki server address -->
    <target name="loki" xsi:type="loki" 
            batchSize="200" 
            taskDelayMilliseconds="500" 
            endpoint="http://your-grafana-loki-server:3100" 
            username="" 
            password="" 
            orderWrites="true"
            layout="${message}">
      <label name="app" layout="anomalie-detection" />
      <label name="server" layout="${hostname:lowercase=true}" />
      <label name="level" layout="${level}" />
      <label name="source" layout="${logger}" />
    </target>
    
    <!-- Console logging -->
    <target xsi:type="Console" name="console" 
            layout="${longdate}|${event-properties:item=EventId:whenEmpty=0}|${level:uppercase=true}|${logger}|${message} ${exception:format=tostring}" />
  </targets>

  <!-- Rules to map loggers to targets -->
  <rules>
    <!-- Log all events to all targets -->
    <logger name="*" minlevel="Trace" writeTo="allfile" />
    <logger name="*" minlevel="Info" writeTo="loki" />
    <logger name="*" minlevel="Info" writeTo="console" />
    
    <!-- Exclude ASP.NET Core infrastructure logs below Warning level -->
    <logger name="Microsoft.*" maxlevel="Info" final="true" />
    <logger name="System.Net.Http.*" maxlevel="Info" final="true" />
  </rules>
</nlog>